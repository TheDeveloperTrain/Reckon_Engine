<Application x:Class="Project_Manager.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Project_Manager"
            xmlns:viewModel="clr-namespace:Project_Manager.MVVM.ViewModel"
            xmlns:view="clr-namespace:Project_Manager.MVVM.View"

             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Theme/MenuButtonTheme.xaml"/>
                <ResourceDictionary Source="Theme/TextboxTheme.xaml"/>
                <ResourceDictionary Source="Theme/ProjectsEntryTheme.xaml"/>
                <ResourceDictionary Source="Theme/ModernButtonTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <DataTemplate DataType="{x:Type view:HomeView}">
                <view:HomeView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type view:EditorInstallsView}">
                <view:EditorInstallsView/>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
